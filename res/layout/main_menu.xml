<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/koinbox_title_background" >
	
    
    <TextView
        android:id="@+id/catch_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" 
        android:text="@string/phrase"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10pt"
        android:textColor="@color/impact_color" />

    <Button
        android:id="@+id/register"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/catch_phrase"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/Register"
        android:textSize="10pt"
        android:background="@drawable/round_button"
        android:textColor="@color/white_text"/>

    <Button
        android:id="@+id/login"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/register"
        android:layout_alignBottom="@+id/register"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/register"
        android:text="@string/log"
        android:textSize="10pt"
        android:background="@drawable/round_button"
        android:textColor="@color/white_text" />

</RelativeLayout>
